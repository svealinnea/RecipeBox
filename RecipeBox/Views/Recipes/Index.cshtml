@{
  Layout = "_Layout";
}

@using RecipeBox.Models;
@model List<RecipeBox.Models.Recipe>; 


<h1>Recipes</h1>

@if (@Model.Count == 0)
{
  <h3>No recipes have been added yet!</h3>
} 

@foreach (Recipe recipe in Model)
{

  @* <p>@Html.DisplayNameFor(model => model.RecipeRating): @Html.DisplayFor(model => model.RecipeRating)</p> *@
  <li>@ViewBag.RecipeRating   @Html.ActionLink($"{recipe.RecipeName}", "Details", new { id = recipe.RecipeId })</li>
}
<br>
<p>@Html.ActionLink("Add new recipe", "Create")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>